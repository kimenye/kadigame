.container
  .page-header
    %h3 KADI
    %small Kenyan Style Poker
.container
  #game_container
    .loading
      %span#loader_text Loading...
      #loader
        %span#progressHolder
          %span#progressAmountIndicator{:style => 'width: 5%'}
    #game.hidden
      #control-panel
        %button#toggle-button.btn
          %i#toggle-button-icon.icon-arrow-up
:javascript
  (function(){
    window.pl = { id: "#{@player.fb_id}", name: "#{@player.name}", currentScore: 0, timesPlayed: parseInt("#{@player.times_played}"), timesWon: parseInt("#{@player.games_won}") };
  }) ();